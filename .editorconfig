root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.fish]
indent_size = 4

[*.ini]
trim_trailing_whitespace = false

[*.md]
trim_trailing_whitespace = false
indent_size = 4

[*.tsv]
indent_size = 8
indent_style = tab

[{Makefile,*.make}]
indent_style = tab
