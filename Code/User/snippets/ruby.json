{
  "new_class": {
    "prefix": "class",
    "body": [
      "class ${1:Thing}",
      "\t# @return [String]",
      "\tattr_reader :name",
      "",
      "\tdef initialize(*args)",
      "\t\t${0:@name = name}",
      "\tend",
      "end"
    ],
    "description": "New class definition"
  },
  "def_inspect": {
    "prefix": "def inspect",
    "body": [
      "# @return [String]",
      "def inspect",
      "  %(#<#{self.class.name}:#{${1:self}}>)",
      "end"
    ],
    "description": "#inspect"
  },
  "def_initialize": {
    "prefix": "def initialize",
    "body": [
      "def initialize${2:(${1:*args})}",
      "\t$0",
      "end"
    ],
    "description": "#new"
  },
  "def_to_h": {
    "prefix": "def to_h",
    "body": [
      "# @return [Hash]",
      "def to_h",
      "\t{$0}",
      "end"
    ],
    "description": "#to_h"
  },
  "frozen_string_literal": {
    "prefix": "frozen",
    "body": [
      "$LINE_COMMENT frozen_string_literal: true\n\n"
    ],
    "description": "`frozen_string_literal` comment"
  },
  "hashbang_ruby": {
    "prefix": "!env",
    "body": [
      "#!${1|/usr/bin/env ruby,/usr/local/opt/ruby/bin/ruby|}\n\n"
    ]
  },
  "rubocop_disable_enable": {
    "prefix": "# rubocop:disable",
    "body": [
      "# rubocop:disable ${1:Layout/LineLength, Style/StringLiterals}",
      "$0",
      "# rubocop:enable ${1}"
    ],
    "description": "rubocop: disable/enable"
  },
  "rubocop_disable": {
    "prefix": "# rubocop:disable",
    "body": "# rubocop:disable ${1:Layout/LineLength, Style/StringLiterals}",
    "description": "rubocop: disable/enable"
  }
}
