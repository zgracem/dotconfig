# ~/.editorconfig
root = true

### Supported in Sublime Text:
#     root, charset, end_of_line, indent_size, indent_style,
#     insert_final_newline, trim_trailing_whitespace

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown
[*.{md,markdown}]
indent_size = 4
trim_trailing_whitespace = false

# Python
[*.py]
indent_size = 4

# Terminfo
[*.ti]
indent_style = tab
indent_size = 4

# Vim
[{vimrc,.vimrc,*.vim}]
trim_trailing_whitespace = false

# Makefile
[Makefile]
indent_style = tab
