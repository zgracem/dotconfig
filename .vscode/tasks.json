{
  "version": "2.0.0",
  "presentation": {
    "reveal": "silent",
    "panel": "dedicated",
    "showReuseMessage": false,
    "clear": true
  },
  "problemMatcher": [],
  "osx": {
    "options": {
      "env": {
        "PATH": "${env:PATH}",
        "XDG_CONFIG_HOME": "${env:HOME}/.config"
      }
    }
  },
  "tasks": [
    {
      "label": "Lint POSIX shell files",
      "type": "shell",
      "command": "bin/check_dotfiles.sh",
      "problemMatcher": {
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      },
      "presentation": {
        "revealProblems": "onProblem"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Lint fish files",
      "type": "shell",
      "command": "bin/check_fish_files.fish",
      "problemMatcher": {
        "fileLocation": [
          "relative",
          "${workspaceFolder}/fish"
        ],
        "pattern": {
          "regexp": "^(.+) \\(line (\\d+)\\): (.+)$",
          "file": 1,
          "line": 2,
          "message": 3
        }
      },
      "presentation": {
        "revealProblems": "onProblem"
      },
      "group": "test"
    },
    {
      "label": "Update bat syntaxes",
      "type": "shell",
      "command": "bin/bat-syntaxes.fish",
      "group": "build"
    },
    {
      "label": "Update user-agent",
      "type": "shell",
      "command": "bin/user-agent-update.fish",
      "group": "build"
    }
  ]
}
