{
  "version": "2.0.0",
  "presentation": {
    "reveal": "silent",
    "panel": "shared",
    "showReuseMessage": false,
    "clear": true,
    "close": true
  },
  "problemMatcher": [],
  "osx": {
    "options": {
      "env": {
        "PATH": "${env:PATH}",
        "XDG_CONFIG_HOME": "${env:HOME}/.config"
      }
    }
  },
  "tasks": [
    {
      "label": "Update user-agent",
      "type": "shell",
      "command": "libexec/user-agent-update.fish",
      "group": "build"
    }
  ]
}
