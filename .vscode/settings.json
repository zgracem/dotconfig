{
  "files.exclude": {
    "brew/**/*.lock.json": true,
    "htop": true,
    "iterm2": true,
    "putty/*.session": { "when": "$(basename).patch" },
    "StardewValley/{ErrorLogs,Saves}": true,
    "syncplay.ini": true,
    "www/*.css": { "when": "$(basename).sass" },
    "**/*.conf": { "when": "$(basename).conf.m4" },
    "**/{*rc,config}": { "when": "$(basename).m4" }
  },
  "git.detectSubmodules": false
}
