[core]
	autocrlf = input
	safecrlf = true
	excludesfile = ~/.config/git/globalignore
	filemode = false

[alias]
	hist = log --pretty=format:'[%h] %ad | %s%d' --graph --date=short

[hub]
	protocol = https

[color]
	ui = true
	branch = true
	diff = true
	interactive = true
	status = true

[diff]
	tool = vimdiff

[difftool]
	prompt = false
  # Be able to abort all diffs with `:cq` or `:cquit`
  trustExitCode = true

[push]
	default = simple

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
