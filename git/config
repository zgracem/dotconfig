[commit]
	gpgsign = true

[diff]
	tool = vimdiff
	algorithm = histogram

[difftool]
	prompt = false
	# Be able to abort all diffs with `:cq` or `:cquit`
	trustExitCode = true

[diff "exiftool"]
	textconv = exiftool -s2 -d "%F %T"
	cachetextconv = true

[diff "fish"]
	xfuncname = "^\\s*(function\\s+\\S+)( -.+)?$"

[diff "ps"]
	binary = true
	textconv = ps2ascii

[push]
	default = simple

[pull]
	rebase = false

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[init]
	defaultBranch = main

[merge]
	tool = smerge

[mergetool "smerge"]
	cmd = smerge mergetool \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
	trustExitCode = true

[gpg]
	format = ssh

[gpg "ssh"]
