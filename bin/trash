#!/usr/bin/env ruby -w

# This Ruby script reformats its arguments into paths acceptable to an
# AppleScript which tells the Finder to put those files in the trash. Using the
# Finder's own API enables the "Put Back" feature on the trashed item(s).

require "open3"
require "optparse"

opts = { verbose: false }
usage = "Usage: trash [-v] FILE [FILE ...]\n\n"

optparser = OptionParser.new do |parser|
  parser.banner = usage

  parser.on("-v", "--verbose", "Explain what is being done") do |opt|
    opts[:verbose] = opt
  end
end
optparser.parse!(ARGV, into: opts)

if ARGV.empty?
  warn usage
  exit 1
end

paths = ARGV.map { |f| File.absolute_path(f) }
files = begin
  paths.map { |path| %(the POSIX file "#{path}") }.join(", ")
rescue Errno::ENOENT => e
  warn e.message
  exit Errno::ENOENT::Errno
end

applescript = format('tell app "Finder" to move { %<files>s } to trash', files:)
_stdin, _stdout, stderr, thread = Open3.popen3("osascript", "-e", applescript)
if thread.value.success?
  paths.each { |path| puts "moved `#{path}` to Trash" } if opts[:verbose]
else
  warn stderr.read
end

exit thread.value.exitstatus
