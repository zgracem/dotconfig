#!/usr/bin/env bash
# cross-platform (macOS, Cygwin, Linux) clipboard wrapper

if command -v pbpaste >/dev/null; then # macOS
  pbpaste "$@"
elif command -v qdbus >/dev/null; then # Linux + KDE
  qdbus org.kde.klipper /klipper getClipboardContents
elif command -v getclip >/dev/null; then # cygwin utility
  getclip
elif [[ -r /dev/clipboard ]]; then # cygwin fallback
  cat /dev/clipboard
else
  echo >&2 "error: failed to access clipboard"
  exit 1
fi
