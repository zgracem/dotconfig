# -----------------------------------------------------------------------------
# ~/.config/brew/Brewfile
# -----------------------------------------------------------------------------

# Instructions:
#   1. Install Homebrew
#   2. `brew tap homebrew/bundle`
#   3. `brew bundle --file=$THIS_FILE`
#   4. `brew bundle --file=~/.local/config/brew/Brewfile` [optional]

tap "homebrew/aliases"

# -----------------------------------------------------------------------------
# essentials
# -----------------------------------------------------------------------------

# for Linuxbrew
brew "gcc" if OS.linux?

# for Homebrew
brew "openssl"
brew "curl"
brew "git"

# bash 4
brew "bash"
brew "bash-completion@2"

# tmux
brew "tmux"
brew "reattach-to-user-namespace" if OS.mac?

# other
brew "dtrx"
brew "vim"
brew "wget"
brew "less"
brew "ncurses"

# -----------------------------------------------------------------------------
# GNU utilities
# -----------------------------------------------------------------------------

if OS.mac?
  brew "coreutils"

  brew "gawk"
  brew "gnu-tar"

  # parallel
  brew "parallel"

  # find, locate, updatedb, and xargs
  brew "findutils"

  # sed
  brew "gnu-sed"

  # grep
  brew "grep"
end

# -----------------------------------------------------------------------------
# internet stuff
# -----------------------------------------------------------------------------

brew "links"

if OS.mac?
  brew "rsync"
  brew "whois"
end

# -----------------------------------------------------------------------------
# development
# -----------------------------------------------------------------------------

if MacOS.version >= "10.6"
  brew "rbenv"
  brew "ruby-build"
  brew "rbenv-bundler"
end

brew "python"
brew "jq"

# -----------------------------------------------------------------------------
# other stuff
# -----------------------------------------------------------------------------

if OS.mac?
  brew "rename"
  brew "tree"
  brew "watch"
end

# images
brew "pngcrush"

# OpenSSH
brew "openssh"
brew "ssh-copy-id"

# text
brew "dos2unix"
brew "multimarkdown"

# misc.
brew "binutils"
brew "exa"
brew "ghostscript"
brew "groff"
brew "source-highlight" # for less
brew "stow"
